<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns="http://java.sun.com/xml/ns/persistence" version="2.0">
    <persistence-unit name="kwetterDB" transaction-type="JTA">
        <jta-data-source>kwetter_resource</jta-data-source>
        <class>model.Kwetteraar</class>
        <class>model.Kweet</class>
        <class>model.Hashtag</class>
        <class>model.Rol</class>
        <class>model.Locatie</class>
        <properties>
            <property name="javax.persistence.schema-generation.database.action" value="drop-and-create"/>
        </properties>
    </persistence-unit>

</persistence>